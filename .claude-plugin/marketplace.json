      "keywords": ["social-listening", "content-strategy", "trigify", "competitive-analysis", "brand-monitoring", "trending-topics", "content-gaps"],
      "category": "social-intelligence",
      "tags": ["marketing", "social-listening", "competitive-analysis", "brand-monitoring", "trigify"],
      "mcpServers": {
        "trigify": {
          "command": "npx",
          "args": ["-y", "mcp-remote", "https://api.trigify.io/mcp"],
          "env": {
            "TRIGIFY_API_KEY": "${TRIGIFY_API_KEY}"
          }
        }
      }
